<web-app>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.UserAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user_add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserEditServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.UserEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserEditServlet</servlet-name>
        <url-pattern>/user_edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.UserDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user_delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemAddServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.ItemAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemAddServlet</servlet-name>
        <url-pattern>/item_add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemCutServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.ItemCutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemCutServlet</servlet-name>
        <url-pattern>/item_cut</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemCancelCutServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.ItemCancelCutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemCancelCutServlet</servlet-name>
        <url-pattern>/item_cancel_cut</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemPasteServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.ItemPasteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemPasteServlet</servlet-name>
        <url-pattern>/item_paste</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.vladshkerin.servlets.LifeCycleServlet</servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>admin@gmail.com</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life_cycle</url-pattern>
    </servlet-mapping>

</web-app>
